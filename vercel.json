{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "assetPatterns": [
          "assets/**/*.webp",
          "assets/**/*.png",
          "assets/**/*.jpg",
          "assets/**/*.svg"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*\\.[a-f0-9]{8}\\..+)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable",
        "Content-Type": "image/webp"
      },
      "continue": true
    },
    {
      "src": "/(.*\\.(css|js))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ]
}